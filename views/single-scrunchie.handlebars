{{#if loggedIn}}
<article>
  <a href="/dashboard"> &larr; Back to dashboard</a>
  <h2>
    Edit Scrunchie
  </h2>
  <form class="edit-scrunchie-form">
    <div>
      <input name="scrunchie-title" type="text" value="{{title}}" />
